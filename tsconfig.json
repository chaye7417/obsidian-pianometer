{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2018", "ES2019", "ES2020"]
  },
  "include": ["**/*.ts"]
}
